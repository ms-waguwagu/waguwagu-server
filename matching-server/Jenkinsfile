    NAMESPACE    = "matching"

    DEPLOYMENT_NAME = "matching-deploy"
    CONTAINER_NAME  = "matching"
  }

  options {
    skipDefaultCheckout(true)
    // (ÏòµÏÖò) Ï§ëÎ≥µ checkout Î∞©ÏßÄÌïòÍ≥† Ïã∂ÏúºÎ©¥ ÏºúÎèÑ Îê®
    // skipDefaultCheckout(true)
  }

  stages {
    stage("Checkout") {
      steps {
        checkout scm
      }
    }

    // (ÏÑ†ÌÉù) matching-server Ìè¥Îçî Î≥ÄÍ≤Ω Ï≤¥ÌÅ¨ (ÌïòÏßÄÎßå Ïù¥Ï†ú Ïä§ÌÇµ/Ï§ëÎã® Ïïà Ìï®)
    stage("Change check") {
      steps {
        script {
          echo "=== MATCHING JENKINSFILE TEST v1 ==="   // <- Ïù¥Í±∞ Ìïú Ï§Ñ Ï∂îÍ∞ÄÌï¥Î≥¥Í∏∞ ÌÖåÏä§Ìä∏Ïö©ÎèÑ Ïã§Ï†ú Ïûò pollingÎêòÎÇò
          def changed = sh(
            script: "git diff --name-only HEAD~1..HEAD | grep -E '^matching-server/' || true",
            returnStdout: true
          ).trim()

          //  Î≥ÄÍ≤ΩÏù¥ ÏóÜÏñ¥ÎèÑ ÎπåÎìúÎ•º ÎßâÏßÄ ÎßêÍ≥† Í∑∏ÎÉ• ÏßÑÌñâ
          if (!changed) {
